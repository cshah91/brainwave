<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewServiceTitle"
            android:padding="15dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#351C75"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#351C75" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/llWorkshops">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wk_content_1_1"
                        style="@style/dialog_content"
                        android:visibility="gone"
                        android:id="@+id/wkContent11"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wk_learn"
                        style="@style/dialog_content"
                        android:visibility="gone"
                        android:id="@+id/wkContent12"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewWkBullets1"
                        style="@style/dialog_content"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wk_content_2_1"
                        style="@style/dialog_content"
                        android:visibility="gone"
                        android:id="@+id/wkContent21"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wk_learn"
                        style="@style/dialog_content"
                        android:visibility="gone"
                        android:id="@+id/wkContent22"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewWkBullets2"
                        style="@style/dialog_content"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wk_content_3_1"
                        style="@style/dialog_content"
                        android:visibility="gone"
                        android:id="@+id/wkContent31"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wk_content_3_2"
                        style="@style/dialog_content"
                        android:visibility="gone"
                        android:id="@+id/wkContent32"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewWkBullets31"
                        style="@style/dialog_content"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wk_content_3_3"
                        style="@style/dialog_content"
                        android:visibility="gone"
                        android:id="@+id/wkContent33"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewWkBullets32"
                        style="@style/dialog_content"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wk_content_6_1"
                        style="@style/dialog_content"
                        android:visibility="gone"
                        android:id="@+id/wkContent61"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewWkBullets61"
                        style="@style/dialog_content"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wk_content_6_2"
                        style="@style/dialog_content"
                        android:visibility="gone"
                        android:id="@+id/wkContent62"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewWkBullets62"
                        style="@style/dialog_content"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewServiceContent"
                    android:text="Some Content"
                    android:padding="10dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>