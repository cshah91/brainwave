<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nksystems.brainwave">

    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_bw_blue"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bw_blue"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity_loading">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity_home_list" />
        <activity
            android:name=".activity_home_menu"
            android:label="@string/title_activity_home_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity_product_info" />
        <activity
            android:name=".activity_counselling_form"
            android:label="Counselling Form" />
        <activity
            android:name=".activity_purchase_services"
            android:label="Purchase Services" />
        <activity android:name=".activity_about_services" />
        <activity
            android:name=".WorkshopsActivity"
            android:label="Workshops" />
        <activity
            android:name="com.braintreepayments.api.BraintreeBrowserSwitchActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="${applicationId}.braintree" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />

        <activity android:name=".activity_order_confirmation"></activity>
    </application>

</manifest>